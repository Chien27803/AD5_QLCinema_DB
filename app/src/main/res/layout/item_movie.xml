<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgMovie"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvMovieTitle"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                tools:text="Phá Đám Sinh Nhật Mẹ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvMovieType"
                android:textSize="14sp"
                android:textColor="#666666"
                tools:text="Thể loại: Gia đình"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvMovieDuration"
                android:textSize="14sp"
                android:textColor="#999999"
                tools:text="Thời lượng: 91 phút"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvMovieStatus"
                android:textSize="14sp"
                android:textColor="#999999"
                tools:text="Trạng thái: Đang chiếu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnEditMovie"
                android:src="@android:drawable/ic_menu_edit"
                android:tint="#3498DB"
                android:contentDescription="Sửa Phim"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <ImageView
                android:id="@+id/btnDeleteMovie"
                android:src="@android:drawable/ic_menu_delete"
                android:tint="#E74C3C"
                android:contentDescription="Xóa Phim"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="4dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>