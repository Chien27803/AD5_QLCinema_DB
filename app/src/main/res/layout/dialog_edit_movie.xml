<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_dialog_round">

    <TextView
        android:text="Sửa Phim"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Label -->
    <TextView
        android:text="Tên phim"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtMovieTitle"
        android:hint="Nhập tên phim..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!-- Label -->
    <TextView
        android:text="Thể loại"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtMovieType"
        android:hint="Ví dụ: Hành động, tình cảm..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!-- Label -->
    <TextView
        android:text="Thời lượng (phút)"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtMovieDuration"
        android:hint="Nhập số phút"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!-- Label -->
    <TextView
        android:text="Mô tả"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtDescription"
        android:hint="Nhập mô tả phim..."
        android:inputType="textMultiLine"
        android:minLines="3"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!-- Label -->
    <TextView
        android:text="Trạng thái"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtMovieStatus"
        android:hint="Đang chiếu / Sắp chiếu / Đã hủy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!-- Buttons -->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật"/>

    </LinearLayout>

</LinearLayout>
